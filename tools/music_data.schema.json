{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VideoData",
  "type": "array",
  "additionalItems": false,
  "items": {
    "type": "object",
    "required": ["videoId", "videoTags", "clips"],
    "properties": {
      "videoId": {
        "type": "string",
        "pattern": "^[A-Za-z0-9_-]{11}$"
      },
      "uploaderName": {
        "type": ["string", "null"],
        "minLength": 1
      },
      "videoTags": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
        },
        "minItems": 1
      },
      "clips": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": [
            "songTitle",
            "artists",
            "isClipped",
            "startTime",
            "endTime"
          ],
          "properties": {
            "songTitle": { "type": ["string"], "minLength": 1 },
            "artists": {
              "type": "array",
              "items": { "type": "string", "minLength": 1 },
              "minItems": 1
            },
            "externalArtists": {
              "type": ["array", "null"],
              "items": { "type": "string" },
              "minItems": 0
            },
            "isClipped": { "type": "boolean" },
            "startTime": {
              "type": "string",
              "NOTE": "To prevent using default values(PT), the 'M' (minutes) designator must be present in the duration string.",
              "pattern": "^PT([0-9]+H)?([0-9]+)M?([0-9]+S)?$"
            },
            "endTime": {
              "type": "string",
              "NOTE": "To prevent using default values(PT), the 'M' (minutes) designator must be present in the duration string.",
              "pattern": "^PT([0-9]+H)?([0-9]+)M?([0-9]+S)?$"
            },
            "clipTags": {
              "type": ["array", "null"],
              "items": {
                "type": "string",
                "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
              },
              "minItems": 0
            }
          }
        }
      }
    }
  }
}
