{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Music database array schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "The title of the music piece"
      },
      "id": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9-_]{11}$",
        "description": "A YouTube video ID"
      },
      "artists": {
        "type": "array",
        "items": {
          "type": "string",
          "description": "The name of the artist",
          "pattern": "^.*$"
        },
        "description": "A list of artists associated with the music piece"
      },
      "publishedAt": {
        "type": "string",
        "format": "date",
        "pattern": "^20\\d{2}-(0[1-9]|1[0-2])-(0[1-9]|[12]\\d|3[01])$",
        "description": "The date when the music piece was published"
      },
      "uuid": {
        "type": "string",
        "format": "uuid",
        "pattern": "[0-9a-f]{8}-0000-7[0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}",
        "description": "A unique identifier for the music piece"
      },
      "startTime": {
        "type": "string",
        "pattern": "^PT(?:(\\d+H)?(\\d+M)?(\\d+S)?)$",
        "description": "The start time of the music piece"
      },
      "endTime": {
        "type": "string",
        "pattern": "^PT(?:(\\d+H)?(\\d+M)?(\\d+S)?)$",
        "description": "The end of the music piece"
      }
    },
    "required": ["title", "id", "artists", "publishedAt", "uuid"]
  }
}
