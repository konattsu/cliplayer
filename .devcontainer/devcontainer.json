// wslからの起動が安定しない問題の解決方法
// wsl> `code .`
// vscodeが立ち上がるので, その上でrebuild and reopen in container
// wsl> `sudo systemctl restart docker`
// vscode側で接続が切れた旨の通知, reload windowsを促されるので従う
// vscodeで`rebuild`, 直る

{
  "name": "TypeScript",
  "service": "ts_react_dev",
  "workspaceFolder": "/workspaces",
  "dockerComposeFile": "./docker-compose.yml",

  "features": {
    // ref: https://containers.dev/features
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "1.88",
      "profile": "default"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        // https://github.com/microsoft/vscode/issues/179827
        // 新しく拡張機能を加える際に注意が必要
        "extensions.verifySignature": false
      },
      "extensions": [
        // ts/css
        "bradlc.vscode-tailwindcss",
        "christian-kohler.npm-intellisense",
        "dbaeumer.vscode-eslint",
        "ecmel.vscode-html-css",
        "kisstkondoros.vscode-gutter-preview",
        "wallabyjs.quokka-vscode",
        "zignd.html-css-class-completion",

        // rust
        //   main extensions are enabled by devcontainer feature
        "fill-labs.dependi",

        // markdown
        "davidanson.vscode-markdownlint",
        // "bierner.markdown-mermaid",
        // "corschenzi.mermaid-graphical-editor",
        // "shd101wyy.markdown-preview-enhanced",
        // "yzane.markdown-pdf",
        // "yzhang.markdown-all-in-one",

        // git/github
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "github.copilot",
        "github.vscode-github-actions",
        "mhutchie.git-graph",

        // others
        "asuka.insertnumbers",
        "christian-kohler.path-intellisense",
        "editorconfig.editorconfig",
        "esbenp.prettier-vscode",
        "gruntfuggly.todo-tree",
        "mosapride.zenkaku",
        "ms-azuretools.vscode-docker",
        "mtxr.sqltools",
        "redhat.vscode-yaml",
        "ritwickdey.liveserver",
        "shardulm94.trailing-spaces",
        "streetsidesoftware.code-spell-checker",
        "wmaurer.change-case"
      ],

      "mcp": {
        "servers": {
          "context7": {
            "type": "stdio",
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp"]
          }
        }
      }
    }
  }
}
