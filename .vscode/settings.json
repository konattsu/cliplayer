{
  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,
  // To run Prettier in environments where ESLint doesn't run, such as JSON files
  "editor.formatOnSave": true,

  // ESLint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Tailwind CSS
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },

  // Rust
  "rust-analyzer.linkedProjects": ["music_data/Cargo.toml"],
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  // Taplo
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },

  // 楽曲データたちよう
  "json.schemas": [
    {
      "fileMatch": ["/data/artists.json"],
      "url": "./tools/artist.schema.json"
    }
  ],
  "[json][**/*.min.json]": {
    "editor.formatOnSave": false,
    "editor.renderFinalNewline": "off"
  },

  "cSpell.words": [
    "appender",
    "chrono",
    "cliplayer",
    "Deque",
    "musictl",
    "reqwest",
    "rustls",
    "serde",
    "thiserror",
    "vitest",
    "walkdir"
  ]
}
