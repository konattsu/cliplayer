{
  "editor.formatOnSave": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  // "gitlens.codeLens.authors.enabled": false,
  // "gitlens.codeLens.recentChange.enabled": false,

  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.requireConfig": true,

  // ESLint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Tailwind CSS
  "editor.quickSuggestions": {
    "strings": true
  },

  // Rust
  "rust-analyzer.linkedProjects": ["music_data/Cargo.toml"],
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  // Taplo
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },

  // Typescript
  "typescript.tsserver.log": "verbose",

  // 楽曲データたちよう
  "json.schemas": [
    {
      "fileMatch": ["/data/artists_data.json"],
      "url": "./tools/artists_data.schema.json"
    },
    {
      "fileMatch": ["/data/input.json", "for_dev/x_music_data.json"],
      "url": "./tools/music_data.schema.json"
    }
  ],

  // spell checking
  "cSpell.words": [
    "appender",
    "chrono",
    "cliplayer",
    "Deque",
    "musictl",
    "reqwest",
    "rustls",
    "serde",
    "thiserror",
    "vitest",
    "walkdir"
  ]
}
